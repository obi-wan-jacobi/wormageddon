{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "rootDir": "./",
    "allowJs": false,
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "baseUrl": "src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "types": ["node"],
    "paths": {
      "app/*": ["app/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
